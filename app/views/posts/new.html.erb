<h1>New Post</h1>
<%= form_for @post do |f| %>
  <% unless @post.errors.empty? %>
    <span class="errors">
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </span>
  <% end %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>
